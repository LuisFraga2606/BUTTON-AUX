<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_style">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_app</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="linear_layout_banner_bottom_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/negro</item>
    </style>

    <style name="text_view_social_media_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30dp</item>
    </style>

    <!--Boton Amarillo Juego-->
    <style name="btn_colors_amarillo_game_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">10</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/btn_color_amarillo_game</item>
    </style>

    <!--Boton Verde Juego-->
